@model GreenAura.Models.ProductInfo

@{
    ViewData["Title"] = "ProductDetails";
}

<h1 class="text-center">Product Details</h1>
<div class="card mb-1">
    <div class="card-header bg-primary"><h2>@Html.DisplayFor(model => model.ProductName)</h2></div>
    <div class="card-body">
        <ul>
            <li>
                @Html.DisplayFor(model => model.Details)
            </li>
            <li>
                Do This Exercise
                @Html.DisplayFor(model => model.Quantity) times in a week for
                @Html.DisplayFor(model => model.Price) Minutes.
                This is @Html.DisplayFor(model => model.PlantType.PlantTypeName) Type Plant.
            </li>
        </ul>
    </div>
</div>

        
