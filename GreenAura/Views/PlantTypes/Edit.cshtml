@model GreenAura.Models.PlantType

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit Plant Type Details</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlantTypeID" />
            <div class="form-group">
                <label asp-for="PlantTypeName" class="control-label"></label>
                <input asp-for="PlantTypeName" class="form-control" />
                <span asp-validation-for="PlantTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Exercise Type Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">View All Plant Type</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
